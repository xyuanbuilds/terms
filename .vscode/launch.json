{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts test",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "protocol": "inspector",
      "env": { 
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json",
      },
      "args": ["node_modules/esno/esmo.mjs", "./${relativeFile}"],
      // "runtimeArgs": [".../npx","${workspaceFolder}/node_modules/.bin/esmo"],
      // "runtimeArgs": ["${workspaceFolder}/node_modules/esno/esmo.mjs"],
      // "args": ["./${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "sourceMaps": true,
    }
  ]
}
